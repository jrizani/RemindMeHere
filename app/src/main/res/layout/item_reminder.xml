<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/item"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/alerter_padding_half">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--LOGO-->
        <com.mikepenz.iconics.view.IconicsImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:iiv_color="@color/colorPrimary"
            app:iiv_icon="@string/faw_bell"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <!--END LOGO-->

        <!--DATE-->
        <TextView
            android:id="@+id/dueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 Jan 2018"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/alerter_text_small"
            app:layout_constraintRight_toRightOf="parent" />
        <!--END DATE-->

        <!--LOCATION-->
        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="@dimen/alerter_text_small"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alfamart"
            android:textColor="@android:color/black"
            android:textSize="@dimen/alerter_text_medium"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/t1" />
        <!--END LOCATION-->

        <!--DESCRIPTION-->
        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="@dimen/alerter_text_small"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/location" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beli Sikat Gigi"
            android:textColor="@android:color/black"
            android:textSize="@dimen/alerter_text_medium"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/t2" />
        <!--END DESCRIPTION-->

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>